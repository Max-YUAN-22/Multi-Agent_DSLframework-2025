# Multi-Agent DSL Framework Environment Configuration
# 复制此文件为 .env 并根据需要修改配置

# 应用配置
APP_NAME=Multi-Agent DSL Framework
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# 服务器配置
HOST=0.0.0.0
PORT=8008

# 数据库配置
DATABASE_URL=sqlite:///./data/app.db
# 生产环境示例: DATABASE_URL=postgresql://user:password@localhost:5432/multi_agent_db

# Redis配置
REDIS_URL=redis://localhost:6379
# 生产环境示例: REDIS_URL=redis://redis-server:6379

# WebSocket配置
WS_HOST=localhost
WS_PORT=8008

# 前端配置
FRONTEND_URL=http://localhost:3001
REACT_APP_API_URL=http://localhost:8008
REACT_APP_WS_URL=ws://localhost:8008

# 性能配置
MAX_CONCURRENT_EVENTS=1000
EVENT_TIMEOUT=30
AGENT_TIMEOUT=60
MAX_AGENTS=50

# 缓存配置
CACHE_TTL=300
CACHE_MAX_SIZE=10000

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090

# 安全配置
SECRET_KEY=your-secret-key-change-in-production
CORS_ORIGINS=http://localhost:3001,http://localhost:8080

# 第三方服务配置（可选）
# OPENAI_API_KEY=your-openai-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key

# 部署配置
# 生产环境
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=WARNING
# CACHE_TTL=3600
# SECRET_KEY=your-production-secret-key
